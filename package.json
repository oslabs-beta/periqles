{
  "name": "periqles",
  "version": "0.1.0",
  "description": "React component library to generate forms from a GraphQL schema",
  "main": "/lib/index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oslabs-beta/periqles"
  },
  "maintainers": [
    {
      "name": "Joe Toledano"
    },
    {
      "name": "Kelly Porter"
    },
    {
      "name": "Ian Garrett"
    },
    {
      "name": "Cameron Baumgartner"
    }
  ],
  "license": "MIT",
  "keywords": [
    "react",
    "relay",
    "apollo",
    "graphql",
    "forms",
    "component"
  ],
  "scripts": {
    "tsc": "tsc",
    "clean": "shx rm -rf _bundles lib lib-esm",
    "simple-build": "tsc --watch && webpack",
    "build": "npm run clean && tsc && tsc -m es6 --outDir lib-esm && webpack",
    "lint": "eslint ./src ./types",
    "test": "jest --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/eslint-parser": "^7.12.17",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^23.6.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-relay": "^10.1.0",
    "shx": "^0.3.3",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.5.0"
  },
  "peerDependencies": {},
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "jest": {
    "globalSetup": "./__tests__/jest-setup.js",
    "globalTeardown": "./__tests__/jest-teardown.js"
  }
}
